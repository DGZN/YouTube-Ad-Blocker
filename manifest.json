{
  "name": "YouTube Ad Blocker",
  "version": "1.0",
  "description": "Block all YouTube advertisements automatically",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "*://*.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "block.js"
      ]
    }
  ]
}